<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authorization.Start"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logoholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/logo"
       />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        app:cardBackgroundColor="#5a1f26"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="90dp"
        android:id="@+id/loginCard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/whitePlane"
            android:textSize="30dp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginCard"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        app:cardBackgroundColor="#5a1f26"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/registerCard">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textColor="@color/whitePlane"
        android:textSize="30dp"

        android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerCard"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        app:cardBackgroundColor="#5a1f26"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/guestCard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN AS GUEST"
            android:textColor="@color/whitePlane"
            android:textSize="30dp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
    <ImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/customFacebook"
        android:background="@drawable/facebook"
        android:layout_below="@id/guestCard"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"

        />
</RelativeLayout>